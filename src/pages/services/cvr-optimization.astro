---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="CVR Optimization | Aquorix.digital">
  <Navbar />
  <main class="bg-background selection:bg-accent selection:text-background">
    <!-- Hero Section: Architectural & Immersive -->
    <section
      class="min-h-screen flex items-center pt-40 pb-24 relative overflow-hidden border-b border-white/5"
    >
      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <div
          class="flex flex-col md:flex-row justify-between items-start md:items-end gap-16"
        >
          <div class="max-w-5xl">
            <div
              class="inline-flex items-center gap-3 px-3 py-1 mb-10 bg-accent/10 rounded-full border border-accent/20"
            >
              <span class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"
              ></span>
              <span
                class="text-[9px] uppercase tracking-widest font-bold text-accent"
                >Performance Optimization</span
              >
            </div>
            <h1
              class="text-7xl md:text-[11.5rem] font-display font-medium leading-[0.8] tracking-tighter mb-12"
            >
              The Science <br />
              <span class="text-white/20">of Digital</span>
              <br />
              <span class="italic text-white">Growth.</span>
            </h1>
          </div>
          <div class="max-w-xs md:mb-12">
            <p
              class="text-base md:text-lg text-white/40 leading-relaxed font-sans border-l border-accent/30 pl-8"
            >
              We don't guess. We analyze, test, and optimize. Our data-driven
              methodology turns your existing traffic into a high-converting
              revenue engine.
            </p>
          </div>
        </div>
      </div>

      <!-- Subtle Dynamic Background Detail -->
      <div class="absolute inset-0 pointer-events-none">
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120vw] h-[120vw] bg-[radial-gradient(circle_at_center,rgba(191,255,0,0.02)_0%,transparent_60%)]"
        >
        </div>
      </div>
    </section>

    <!-- Optimization Pillars: Core Strategy -->
    <section class="py-32 border-b border-white/5 bg-muted/5">
      <div class="max-w-6xl mx-auto px-6">
        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-px bg-white/5 border border-white/5"
        >
          {
            [
              {
                title: "Data Insights",
                desc: "Deep quantitative analysis to identify exactly where and why users are dropping off your funnel.",
                label: "Quantitative",
              },
              {
                title: "Behavioral Logic",
                desc: "Qualitative research using heatmaps and session recordings to understand user intent and friction.",
                label: "Qualitative",
              },
              {
                title: "ROI Engineering",
                desc: "Systematic A/B testing focused on metrics that actually impact your bottom line, not just vanity stats.",
                label: "Strategic",
              },
            ].map((pillar) => (
              <div class="bg-background p-12 md:p-16 hover:bg-muted/10 transition-colors group">
                <span class="text-[10px] uppercase tracking-[0.3em] font-bold text-accent/40 mb-10 block group-hover:text-accent transition-colors">
                  {pillar.label}
                </span>
                <h3 class="text-3xl font-display font-medium mb-8 leading-none tracking-tight">
                  {pillar.title}
                </h3>
                <p class="text-white/40 leading-relaxed text-sm">
                  {pillar.desc}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Metrics: Performance Results -->
    <section class="py-32 bg-background">
      <div class="max-w-6xl mx-auto px-6">
        <div
          class="flex flex-col md:flex-row justify-between items-start md:items-end mb-24 gap-12"
        >
          <div class="max-w-2xl">
            <p
              class="text-accent text-xs font-bold uppercase tracking-[0.2em] mb-6"
            >
              Optimization Results
            </p>
            <h2
              class="text-5xl md:text-8xl font-display font-medium leading-[0.9] tracking-tighter"
            >
              Impact <br /><span class="text-white/20">by the</span> numbers.
            </h2>
          </div>
          <p class="text-white/40 max-w-xs text-sm leading-relaxed">
            Systematic improvements that lead to compounding growth for your
            digital ecosystem.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            [
              {
                val: "35%+",
                label: "Avg. CVR Increase",
                desc: "Consistent improvements across diverse industries and funnels.",
              },
              {
                val: "2.4x",
                label: "ROI Multiple",
                desc: "Direct impact on customer acquisition costs and lifetime value.",
              },
              {
                val: "500+",
                label: "A/B Tests Run",
                desc: "Extensive library of proven conversion patterns and experiments.",
              },
              {
                val: "0",
                label: "Guesswork",
                desc: "Every recommendation is backed by rigorous empirical data.",
              },
            ].map((stat) => (
              <div class="p-10 rounded-3xl bg-muted/10 border border-white/5 hover:border-accent/40 transition-all duration-500 group">
                <span class="text-5xl md:text-6xl font-display font-medium text-accent mb-6 block">
                  {stat.val}
                </span>
                <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-white/60 mb-4">
                  {stat.label}
                </h4>
                <p class="text-white/30 text-[10px] uppercase tracking-widest leading-relaxed">
                  {stat.desc}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Methodology: The Scientific Flow -->
    <section class="py-32 border-t border-white/5 bg-muted/5 relative">
      <div class="max-w-6xl mx-auto px-6">
        <div class="max-w-xl mb-32">
          <p
            class="text-accent text-xs font-bold uppercase tracking-[0.2em] mb-6"
          >
            Our Methodology
          </p>
          <h2
            class="text-5xl md:text-7xl font-display font-medium leading-[0.9] tracking-tighter"
          >
            Rigorous <br /><span class="text-white/20">verification.</span>
          </h2>
        </div>

        <div class="space-y-32">
          {
            [
              {
                num: "01",
                title: "Funnel Audit",
                desc: "We track every single interaction to identify friction points and drop-off zones. This quantitative audit builds the foundation for our hypothesis.",
                points: [
                  "Event Tracking",
                  "Drop-off Analysis",
                  "Device Segmentation",
                ],
              },
              {
                num: "02",
                title: "Hypothesis Branding",
                desc: "Based on data, we formulate specific design and copy experiments aimed at solving identified friction points and boosting intent.",
                points: [
                  "UVP Refinement",
                  "Layout Stress-Testing",
                  "Copy Experiments",
                ],
              },
              {
                num: "03",
                title: "Iterative Testing",
                desc: "We deploy controlled A/B tests to verify our hypothesis. Only winners are scaled, ensuring every change is a step toward higher revenue.",
                points: [
                  "Statistical Significance",
                  "Scaling Success",
                  "Continuous Learning",
                ],
              },
            ].map((phase, idx) => (
              <div class="flex flex-col md:flex-row gap-16 md:gap-32 items-start">
                <div class="shrink-0">
                  <span class="text-6xl md:text-9xl font-display font-medium text-white/5 italic">
                    {phase.num}
                  </span>
                </div>
                <div class="max-w-2xl">
                  <h3 class="text-3xl md:text-5xl font-display font-medium mb-8 leading-tight">
                    {phase.title}
                  </h3>
                  <p class="text-white/40 text-lg leading-relaxed mb-12">
                    {phase.desc}
                  </p>
                  <div class="flex flex-wrap gap-4">
                    {phase.points.map((p) => (
                      <span class="px-4 py-1.5 rounded-full border border-white/10 text-[10px] font-bold uppercase tracking-widest text-white/20">
                        {p}
                      </span>
                    ))}
                  </div>
                </div>
                <div
                  class={`hidden md:block absolute right-0 w-1/4 h-px bg-accent/20 translate-y-24 ${idx === 2 ? "opacity-0" : ""}`}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-40 border-t border-white/5">
      <div class="max-w-6xl mx-auto px-6">
        <div
          class="bg-accent p-12 md:p-32 rounded-[4rem] text-background text-center relative overflow-hidden group"
        >
          <div class="relative z-10">
            <p
              class="text-[10px] font-bold uppercase tracking-[0.4em] mb-12 text-background/60"
            >
              Ready to scale?
            </p>
            <h2
              class="text-5xl md:text-9xl font-display font-medium tracking-tighter mb-20 leading-[0.8]"
            >
              Unlock your <br />
              <i>revenue.</i>
            </h2>
            <div
              class="flex flex-col md:flex-row items-center justify-center gap-8"
            >
              <a
                href="/#contact"
                class="w-full md:w-auto inline-flex h-20 items-center justify-center px-16 rounded-full bg-background text-accent font-black text-sm uppercase tracking-widest hover:scale-105 transition-transform"
              >
                Get Free Audit
              </a>
              <a
                href="#services"
                class="text-xs font-bold uppercase tracking-[0.2em] text-background/60 hover:text-background transition-colors"
                >View All Capabilities</a
              >
            </div>
          </div>
          <div
            class="absolute inset-0 flex items-center justify-center opacity-[0.05] select-none pointer-events-none"
          >
            <span
              class="text-[40vw] font-display font-black uppercase tracking-tighter"
              >GROWTH</span
            >
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
