---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Ecommerce Solution | Aquorix.digital">
  <Navbar />
  <main>
    <!-- Hero Section -->
    <section
      class="min-h-screen flex items-center pt-32 pb-20 relative overflow-hidden bg-background"
    >
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-5xl">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 mb-10 bg-accent/10 rounded-full border border-accent/20"
          >
            <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
            <span
              class="text-[9px] uppercase tracking-widest font-bold text-accent"
              >Growth Service</span
            >
          </div>
          <h1
            class="text-6xl md:text-[10rem] font-display font-medium leading-[0.85] tracking-tighter mb-12"
          >
            Scalable <br />
            <span class="text-white/20">digital</span>
            <br />
            <span class="italic font-display">commerce.</span>
          </h1>
          <p
            class="text-xl md:text-3xl text-white/40 leading-relaxed font-sans max-w-2xl"
          >
            We build high-octane online stores that handle millions in revenue.
            Secure, blazing fast, and engineered for global scale.
          </p>
        </div>
      </div>

      <!-- Tech Grid Background -->
      <div
        class="absolute inset-x-0 bottom-0 h-1/2 bg-linear-to-t from-accent/3 to-transparent pointer-events-none"
      >
      </div>
    </section>

    <!-- Architecture Section -->
    <section class="py-32 bg-muted/10 border-y border-white/5">
      <div class="container mx-auto px-6">
        <div class="max-w-xl mb-24">
          <p
            class="text-accent text-xs font-bold uppercase tracking-[0.2em] mb-6"
          >
            The Architecture
          </p>
          <h2
            class="text-4xl md:text-6xl font-display font-medium leading-tight mb-8"
          >
            Performance is <br /><span class="text-white/40"
              >the ultimate luxury.</span
            >
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-20">
          {
            [
              {
                title: "Custom Shopfronts",
                desc: "Moving away from boring themes to create unique brand experiences that don't compromise on speed.",
              },
              {
                title: "Seamless Payments",
                desc: "Integrating global payment gateways including Stripe, PayPal, and crypto for a frictionless checkout.",
              },
              {
                title: "Inventory Mastery",
                desc: "Complex warehouse and ERP integrations to keep your operations running smooth across all channels.",
              },
              {
                title: "Enterprise Scaling",
                desc: "Ensuring your site stays online and fast during massive traffic spikes and product drops.",
              },
            ].map((item) => (
              <div class="p-12 border border-white/5 rounded-4xl bg-background hover:border-accent/40 transition-colors">
                <h4 class="text-2xl font-display font-medium mb-4">
                  {item.title}
                </h4>
                <p class="text-white/40 leading-relaxed text-sm">{item.desc}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Visual Divider -->
    <div
      class="h-px w-full bg-linear-to-r from-transparent via-accent/30 to-transparent"
    >
    </div>

    <!-- CTA Section -->
    <section class="py-40 relative overflow-hidden">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center relative z-10">
          <h2
            class="text-5xl md:text-[10rem] font-display font-medium tracking-tighter mb-16 leading-[0.8]"
          >
            Built to <span class="italic text-white">grow</span> with <i>you.</i
            >
          </h2>
          <a
            href="/#contact"
            class="inline-flex h-20 items-center justify-center px-16 rounded-full bg-accent text-background font-black text-sm uppercase tracking-widest hover:scale-105 transition-transform"
          >
            Start Your Store
          </a>
        </div>
      </div>
      <!-- Decorative Element -->
      <div
        class="absolute -bottom-1/2 left-1/2 -translate-x-1/2 w-full h-[500px] bg-accent/5 blur-[150px] rounded-full"
      >
      </div>
    </section>
  </main>
  <Footer />
</Layout>
