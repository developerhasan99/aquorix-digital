---
const services = [
  {
    slug: "branding",
    category: "Design",
    title: "Branding",
    description: "Creating iconic visual identities and brand strategies that resonate deeply with your audience.",
    num: "01"
  },
  {
    slug: "web-design",
    category: "Design",
    title: "Web Design",
    description: "Bespoke, high-end digital experiences designed with a focus on minimalism and conversion.",
    num: "02"
  },
  {
    slug: "cvr-optimization",
    category: "Strategic",
    title: "CVR Optimization",
    description: "Data-driven strategies and A/B testing aimed at maximizing your conversion rates and ROI.",
    num: "03"
  },
  {
    slug: "ecommerce-solution",
    category: "Development",
    title: "Ecommerce Solution",
    description: "Powerful, scalable online stores engineered for maximum performance and growth.",
    num: "04"
  }
];
---
<section id="services" class="py-32 bg-background border-t border-white/5">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-24 gap-8">
      <div class="max-w-xl">
        <p class="text-accent text-xs font-bold uppercase tracking-[0.2em] mb-6">Our Services</p>
        <h2 class="text-4xl md:text-6xl font-display font-medium leading-tight tracking-tight">
          How we help your <br />
          <span class="text-white/40">brand blossom.</span>
        </h2>
      </div>
      <div>
        <a href="#contact" class="inline-flex items-center gap-2 group text-xs font-bold uppercase tracking-widest text-white/60 hover:text-accent transition-colors">
          Explore all services
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-white/5 border border-white/5">
      {services.map((service) => (
        <a href={`/services/${service.slug}`} class="bg-background p-12 md:p-16 group hover:bg-muted/30 transition-all duration-500 relative overflow-hidden block cursor-pointer">
          <div class="flex justify-between items-start mb-12">
            <span class="text-xs font-bold uppercase tracking-widest text-white/30">{service.category}</span>
            <span class="text-xs font-bold font-display text-white/20">{service.num}</span>
          </div>
          
          <h3 class="text-3xl font-display font-medium mb-6 group-hover:text-accent transition-colors leading-tight">
            {service.title}
          </h3>
          <p class="text-white/40 leading-relaxed mb-8">
            {service.description}
          </p>

          <div class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-accent opacity-0 group-hover:opacity-100 transition-all translate-y-2 group-hover:translate-y-0">
            View Service
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
          
          <!-- Subtle Glow on Hover -->
          <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-accent/5 blur-3xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </a>
      ))}
    </div>
  </div>
</section>
