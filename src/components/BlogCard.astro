---
const { post } = Astro.props;
const { title, description, pubDate, image, category, author } = post.data;
const slug = post.slug;
---

<a
  href={`/blog/${slug}`}
  class="group block p-12 md:p-16 hover:bg-muted/30 transition-all duration-500 relative overflow-hidden"
>
  <!-- Meta Info -->
  <div class="flex justify-between items-start mb-12">
    <div
      class="flex items-center gap-3 text-[10px] font-bold uppercase tracking-[0.2em] text-white/20"
    >
      <span
        >{
          pubDate.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }</span
      >
      <span class="w-1 h-1 rounded-full bg-accent/30"></span>
      <span class="text-accent">{category}</span>
    </div>
    <span
      class="text-[10px] font-bold uppercase tracking-[0.2em] text-white/10 group-hover:text-white/20 transition-colors"
      >By {author}</span
    >
  </div>

  <!-- Image Container -->
  <div
    class="aspect-video rounded-2xl overflow-hidden bg-muted relative mb-10 border border-white/5 group-hover:border-accent/20 transition-all duration-700"
  >
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000 opacity-60 group-hover:opacity-80"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-transparent via-background/20 to-background/80 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center"
    >
      <div
        class="w-16 h-16 rounded-full bg-accent flex items-center justify-center scale-75 group-hover:scale-100 transition-transform duration-500"
      >
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="3"
          class="text-background"><path d="M5 12h14M12 5l7 7-7 7"></path></svg
        >
      </div>
    </div>
  </div>

  <!-- Text Content -->
  <div class="max-w-2xl">
    <h3
      class="text-3xl md:text-5xl font-display font-medium mb-6 group-hover:text-accent transition-colors leading-[1.1] tracking-tighter"
    >
      {title}
    </h3>
    <p
      class="text-white/40 leading-relaxed line-clamp-2 text-base md:text-lg font-sans"
    >
      {description}
    </p>
  </div>

  <!-- Subtle Glow on Hover -->
  <div
    class="absolute -bottom-20 -right-20 w-64 h-64 bg-accent/5 blur-[100px] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-1000"
  >
  </div>
</a>
