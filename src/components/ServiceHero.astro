---
interface Props {
  tagline: string;
  heading: string;
  description: string;
}

const { tagline, heading, description } = Astro.props;
---

<section
  class="flex items-center pt-28 md:pt-44 pb-20 md:pb-24 relative overflow-hidden border-b border-white/5"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 md:gap-16 md:items-end">
      <!-- Left content -->
      <div class="flex flex-col items-start md:col-span-3">
        <div
          class="inline-flex items-center gap-3 px-3 py-1 mt-8 md:mt-0 mb-6 md:mb-10 bg-accent/10 rounded-full border border-accent/20"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"></span>
          <span
            class="text-[9px] uppercase tracking-widest font-bold text-accent"
          >
            {tagline}
          </span>
        </div>

        <h1
          class="text-4xl sm:text-5xl md:text-7xl lg:text-[7.5rem]
                 font-display font-medium leading-tight md:leading-none
                 tracking-tighter md:mb-12"
          set:html={heading}
        />
      </div>

      <!-- Right description -->
      <div class="md:col-span-1 md:mb-12">
        <p
          class="text-sm sm:text-base md:text-lg text-white/40 leading-relaxed font-sans
                 border-l-0 md:border-l border-accent/30
                 pl-0 md:pl-8"
        >
          {description}
        </p>
      </div>
    </div>
  </div>

  <!-- Subtle Background Detail -->
  <div class="absolute inset-0 pointer-events-none">
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2
             w-[140vw] h-[140vw] md:w-[120vw] md:h-[120vw]
             bg-[radial-gradient(circle_at_center,rgba(var(--accent-rgb,44,255,199),0.03)_0%,transparent_70%)]"
    >
    </div>
  </div>
</section>
