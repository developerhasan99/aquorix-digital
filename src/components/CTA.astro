---
interface Props {
  tagline: string;
  heading: string;
}

const { tagline, heading } = Astro.props;
---

<section id="contact" class="py-40 bg-background overflow-hidden relative">
  <!-- Subtle Gradient Background -->
  <div class="absolute inset-0 z-0 pointer-events-none opacity-20">
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-accent/10 blur-[150px] rounded-full"
    >
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-6 relative z-10 text-center">
    <p class="text-accent text-xs font-bold uppercase tracking-[0.2em] mb-10">
      {tagline}
    </p>

    <h2
      class="text-5xl md:text-[6.5rem] font-display font-medium leading-[0.9] tracking-tight mb-20"
      set:html={heading}
    />

    <div class="flex flex-col items-center gap-12">
      <a
        href="mailto:hello@aquorix.digital"
        class="group relative inline-flex items-center gap-6 text-2xl md:text-5xl font-display font-medium hover:text-accent transition-colors"
      >
        hello@aquorix.digital
        <div
          class="w-12 h-12 md:w-20 md:h-20 rounded-full border border-white/10 flex items-center justify-center group-hover:bg-accent group-hover:text-background group-hover:border-accent transition-all duration-500"
        >
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            class="md:w-10 md:h-10"><path d="M5 12h14M12 5l7 7-7 7"></path></svg
          >
        </div>
      </a>

      <!-- <div class="w-full h-px bg-white/5 max-w-5xl mx-auto"></div>

      <div
        class="flex flex-wrap justify-center gap-12 text-[10px] font-bold uppercase tracking-[0.3em] text-white/30"
      >
        <a href="#" class="hover:text-white transition-colors">Instagram</a>
        <a href="#" class="hover:text-white transition-colors">Twitter (X)</a>
        <a href="#" class="hover:text-white transition-colors">Dribbble</a>
        <a href="#" class="hover:text-white transition-colors">Behance</a>
      </div> -->
    </div>
  </div>
</section>
