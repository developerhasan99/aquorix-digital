<section
  class="bg-background overflow-hidden relative min-h-[700px] md:min-h-[1000px] flex items-center justify-center"
>
  <!-- Interactive Collage Container -->
  <div class="relative w-full max-w-7xl mx-auto h-full">
    {
      works.map((work) => (
        <div
          class={`absolute transition-all duration-700 ease-out group cursor-pointer ${work.class}`}
        >
          <div class="relative w-full h-full overflow-hidden transition-all duration-700">
            <img
              src={work.image}
              alt="Work Showcase"
              loading="lazy"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      ))
    }

    <!-- Static Center Content -->
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-center z-0 pointer-events-none opacity-20 hidden md:block"
    >
      <h2
        class="text-[15vw] font-display font-black uppercase tracking-tighter text-white/5 leading-none"
      >
        ARCHIVE
      </h2>
    </div>
  </div>

  <style>
    @media (max-width: 640px) {
      section {
        min-height: auto;
        padding-top: 5rem;
        padding-bottom: 5rem;
      }
      .relative.w-full.max-w-7xl {
        display: grid;
        grid-template-cols: repeat(2, 1fr);
        gap: 1rem;
        position: relative;
        height: auto;
        padding: 0 1.5rem;
      }
      .absolute {
        position: relative !important;
        top: auto !important;
        left: auto !important;
        right: auto !important;
        bottom: auto !important;
        transform: none !important;
        width: 100% !important;
        height: auto !important;
        aspect-ratio: 1;
      }
    }
  </style>
</section>
